@page
@model HilleroedSejlklubExam.Pages.Members.AddMemberModel
@{
}
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Member.Name" class="control-label">First Name</label>
        <input asp-for="Member.Name" class="form-control" />
        <span asp-validation-for="Member.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Member.Email" class="control-label">Email</label>
        <input asp-for="Member.Email" class="form-control" />
        <span asp-validation-for="Member.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Member.Phone" class="control-label">Phone</label>
        <input asp-for="Member.Phone" class="form-control" />
        <span asp-validation-for="Member.Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Member.Birthday" class="control-label">Birthday</label>
        <input asp-for="Member.Birthday" type="date" class="form-control" />
        <span asp-validation-for="Member.Birthday" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Photo" class="control-label">Photo</label>
        <input asp-for="Photo" type="file" class="form-control" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Member" class="btn btn-primary" />
    </div>
</form>